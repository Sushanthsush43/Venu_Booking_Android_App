<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Blue4">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Blue5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/head">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/venueName"
                    android:layout_marginHorizontal="10dp"
                    android:text="VENUE NAME"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="30dp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/venueLocation"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/venueName"
                    android:text="LOCATION"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/venueType"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/venueLocation"
                    android:text="TYPE"
                    android:textColor="@color/Blue2"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textSize="18dp">
                </TextView>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/imgLayer"
                android:layout_below="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/a1"
                    android:scaleType="fitXY"></ImageView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bookBtnLayer"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/Blue5"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgLayer">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">
                    <Button
                        android:id="@+id/btnBook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/Blue1"
                        android:textColor="@color/Blue5"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Book venue"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bookDesLayer"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/Blue5"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookBtnLayer">
                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="Turpis massa sed elementum tempus egestas sed sed risus pretium. Diam quis enim lobortis scelerisque fermentum. Morbi tincidunt augue interdum velit euismod in. Ultrices in iaculis nunc sed augue lacus viverra vitae congue. Mattis molestie a iaculis at erat pellentesque adipiscing. Mi bibendum neque egestas congue quisque egestas diam. Cum sociis natoque penatibus et magnis dis parturient montes. Habitant morbi tristique senectus et netus et malesuada fames ac. Semper feugiat nibh sed pulvinar proin. Nulla aliquet porttitor lacus luctus accumsan."
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>